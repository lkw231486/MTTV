<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="1920px"
    android:layout_height="1080px"
    android:id="@+id/frame_layout"
    android:background="@drawable/blue_bg"
    tools:context=".MainActivity">


        <ImageView
            android:layout_width="354px"
            android:layout_height="93px"
            android:layout_marginLeft="112px"
            android:layout_marginTop="76px"
            android:background="@drawable/mantoo_logo" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100px"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="热烈欢迎"
            android:layout_gravity="center_horizontal"
            android:textSize="102.88px"/>

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="46px"
            android:padding="3dp"
            android:text="苏交科工程技术研究中心领导"
            android:textSize="102.88px"/>

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="61px"
            android:text="莅临指导"
            android:padding="3dp"
            android:layout_gravity="center_horizontal"
            android:textSize="102.88px"/>

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100px"
            android:layout_gravity="center_horizontal"
            android:text="2020年4月20日"
            android:textSize="43.71px"/>
    </LinearLayout>

</FrameLayout>